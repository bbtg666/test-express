extends ../layout/common
block content
    h1 Login

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="", method="POST")
        .form-group
            label(for="email") Email
            input#name.form-control(type="text", name="email", value= values ? values.email : '')

            label.mt-3(for="password") Password
            input#phone.form-control(type="text", name="password", value= values ? values.password : '')

            button.btn.btn-primary.mt-3 Login